<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="3dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_left_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:padding="@dimen/borda_padrao">

            <TextView
                android:id="@+id/tv_numero_ba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/fonte_titulo"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_nome_dpto"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_below="@+id/tv_numero_ba"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/fonte_padrao"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_login_solici"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nome_dpto"
                android:paddingTop="@dimen/espacamento_padrao"
                android:textSize="@dimen/fonte_padrao"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_nome_solici"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_below="@+id/tv_login_solici"
                android:textSize="@dimen/fonte_padrao"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/tv_dias_andamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nome_solici"
                android:paddingTop="@dimen/espacamento_padrao"

                android:textSize="@dimen/fonte_reduzida"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#ffffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_right_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:padding="@dimen/borda_padrao"
            android:background="#ffffffff">

            <TextView
                android:id="@+id/tv_desc_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fonte_padrao"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/tv_equip_padrao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_desc_area"
                android:textSize="@dimen/fonte_padrao"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/tv_label_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_equip_padrao"
                android:paddingTop="@dimen/espacamento_padrao"
                android:textSize="@dimen/fonte_padrao"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:text="Descrição"/>

            <TextView
                android:id="@+id/tv_desc_problema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_desc"
                android:lines="5"
                android:ellipsize="end"
                android:textSize="@dimen/fonte_padrao"
                android:fontFamily="sans-serif-condensed"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>